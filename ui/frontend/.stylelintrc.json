{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-css-modules"
  ],
  "rules": {
    "selector-class-pattern": [
      "^[a-z-][a-zA-Z0-9]+$", {
        "message": "Expected class selector to be lowerCamelCase"
      }],
    "value-keyword-case": ["lower", {
      "ignoreProperties": [
        "composes"
      ]
    }]
  }
}
